// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model dept {
  id        String   @id  @default(uuid())
  name      String
  users     user[]
  courses   course[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model user {
  id        String   @id  @default(uuid())
  email     String   @unique
  name      String
  password  String
  role      Int
  sections  section[]

  deptId    String
  dept      dept     @relation(fields: [deptId], references: [id])
  cordinatedCourses course[] @relation("CourseCordinated")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model course {
  id        String   @id  @default(uuid())
  name      String
  sections  section[]
  tests     test[]

  deptId    String
  cordinatorId String
  dept      dept @relation(fields: [deptId], references: [id])
  cordinator user @relation("CourseCordinated",fields: [cordinatorId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model section {
  id        String   @id  @default(uuid())
  name      String
  batch     String
  registrations courseRegistration[]

  courseId  String
  userId    String
  course    course @relation(fields: [courseId], references: [id])
  user      user     @relation(fields: [userId], references: [id])
  @@unique([courseId, userId])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model courseRegistration {
  id        String   @id  @default(uuid())
  regNo     String
  name      String
  marks     marking[]

  sectionId String
  section   section  @relation(fields: [sectionId], references: [id])
  @@unique([sectionId, regNo])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model test {
  id        String   @id  @default(uuid())
  name      String
  date      DateTime
  parts     Int
  partNames String[]
  maxMarks  Int
  questions question[]

  courseId  String
  course    course @relation(fields: [courseId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model question {
  id        String   @id  @default(uuid())
  name      String
  objective Int
  maxMarks  Int
  partName  String
  marks     marking[]

  testId    String
  test      test @relation(fields: [testId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model marking {
  id        String   @id  @default(uuid())
  marks     Int

  regId     String
  reg       courseRegistration @relation(fields: [regId], references: [id])
  questionId String
  question  question @relation(fields: [questionId], references: [id])
  @@unique([questionId, regId])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}